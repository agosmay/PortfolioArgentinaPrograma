<!DOCTYPE html>
<html lang="es">
  <head>
    {{>head}}
  </head>
<body id="backend">
    {{>nav}}
    <h1>Agregar Info</h1>
    <div class="container mb-4">
      
        <div class="mt-4">
            {{#if mensaje}}

                <div class="text-bg-success p-3 text-center">{{mensaje}}</div>
                

            {{/if}}
            <form action="/agregar-info" method="post"> 
                <div class="row">
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="row">
                            <div class="mb-3 col-12 col-md-6">
                                <label for="titulo" class="form-label">Titulo</label>
                                <input type="text" class="form-control" id="titulo" placeholder="Titulo de la seccion"
                                    name="titulo" required>
                            </div>


                            <div class="mb-3 col-12 col-md-6">
                                <label for="sobremi" class="form-label">Acerca de Mi</label>
                                <input type="text" class="form-control" id="sobremi" placeholder="Agregar info"
                                    name="sobremi" required>
                            </div>
                        </div>


                        <div class="col-12" id="">
                            <div class="row">
                                <div class="col-6">
                                    <label for="experiencia" class="form-label ">Experiencia Laboral</label>
                                    <input type="text" name="experiencia" id="experiencia">
                                </div>
                                <div class="col-6">
                                    <label for="educacion">Educacion</label>
                                    <input type="text" name="educacion" id="educacion">
                                </div>
                            </div>

                        </div>



                    </div>
                    <div class="col-12 col-md-6 col-lg-8">
                        <div class="row">
                            <div class="mb-3 col-8">
                                <label for="skills" class="form-label">Skills</label>
                                <textarea class="form-control" id="skills" rows="6"
                                    placeholder="Agregar Info" name="skills"></textarea>
                            </div>
                            <div class="mb-3 col-4">
                                <label for="proyectos" class="form-label">Proyectos Realizados</label>
                                <textarea class="form-control" id="proyectos" rows="6"
                                    placeholder="Agregar Info"
                                    name="proyectos"></textarea>
                            </div>
                        </div>
                    </div>

                </div>



                <button type="submit" class="btn btn-info">Agregar</button>
                <a href="/admin" class="btn btn-info">Volver al listado</a>
            </form>
        </div>
    </div>

    {{> footer}}


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>

</body>

</html>