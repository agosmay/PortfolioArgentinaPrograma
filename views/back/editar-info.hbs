<!DOCTYPE html>
<html lang="es">
  <head>
    {{>head}}
  </head>
 <body id="backend">
	{{>nav}}
    <h1>Editando info</h1>
    <div class="container mb-4">
     	
        <div class="mt-4">


            <form action="/editar-info/{{informacion.id}}" method="post">
                <div class="row">
                            <div class="col-12">
                                <label for="titulo" class="form-label">Titulo</label>
                                <textarea type="text" class="form-control" id="titulo" value={{informacion.titulo}}
                                    name="titulo" required>{{informacion.titulo}}</textarea>
                            </div>


                            <div class="col-12">
                                <label for="sobremi" class="form-label">Acerca de mi</label>
                                <textarea type="text" class="form-control" id="sobremi" value={{informacion.sobremi}}
                                    name="sobremi" required>{{informacion.sobremi}}</textarea>
                            </div>
                        


							<div class="col-12">
                                    <label for="experiencia" class="form-label">Experiencia Laboral</label>
                                    <textarea type="text" class="form-control" id="experiencia" name="experiencia" value={{informacion.experiencia}}>{{informacion.experiencia}}</textarea>
                             </div>
							 
                             <div class="col-12">
                                    <label for="educacion">Educacion</label>
                                    <textarea type="text" class="form-control" name="educacion" id="educacion" value={{informacion.educacion}}>{{informacion.educacion}}</textarea>
                             </div>
							 
							<div class="col-12">
                                <label for="skills" class="form-label">Skills</label>
                                <textarea class="form-control" id="skills" 
                                    name="skills" value={{informacion.skills}}>{{informacion.skills}}</textarea>
                            </div>
							
							<div class="col-12">
                                <label for="proyectos" class="form-label">Proyectos Realizados</label>
                                <textarea class="form-control" id="proyectos" 
                                    placeholder="Agregar Info"
                                    name="proyectos" value={{informacion.proyectos}}>{{informacion.proyectos}}</textarea>
                            </div>
				<div class="row mt-3">
					<div class="col">
						<button type="submit" class="btn btn-info">editar</button>
						<a href="/admin" class="btn btn-info">Volver al Panel de Control</a>
					</div>
				 </div>
				 </div>
            </form>
       
		</div>
		</div>


    {{> footer}}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
</body>

</html>